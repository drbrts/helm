@require 'bower_components/jeet/stylus/jeet'
@require 'bower_components/nib/'

body
  margin 0
  center(100%, 10px)

.container
  col(1/2)
  overflow hidden

.ipad
  border 1px solid black
  transform-origin(top left)

  &.portrait
    width 768px
    height 1024px

  &.landscape
    width 1024px
    height 768px

iframe
  margin 0
  border 0
  width 100%
  height 100%
