@require 'bower_components/jeet/stylus/jeet'
@require 'bower_components/nib/'

.transform
  -webkit-transition -webkit-transform .25s

.blue-marlin
  min-height 500px
  position relative

  nav
    margin-bottom 0

  &.active
    -webkit-transform translate3d(-320px, 0, 0)

  & > .navbar
    margin-bottom 0
    z-index 1

  .shield
    z-index 10

.supertanker
  position relative
  z-index 5

  &.active
    -webkit-transform translate3d(320px, 0, 0)

  .navbar-left:first-child
    margin-left -15px

// .tanker
//   background-color lightcoral

.nav
  & li a
    position relative

.shield
  absolute top right bottom left
  display none

  &.active
    display block

.hold
  cf()
  overflow hidden

  .active > &
    pointer-events none

.cargo
  position absolute
  top 0
  width 320px

  .blue-marlin > &
    left 100%

  .supertanker > &
    right 100%

.grid
  position relative

  li
    list-style-type none
    overflow hidden
    margin-bottom .55%

  .thumb
    width 100%
    position relative

    &::after
      display block
      content ''
      padding-top 75%

    img
      width 100%
      absolute top left bottom right

  // Everything up to iPad Portrait
  @media (max-width: 767px)
    li
      col(1/2, cycle:2, gutter: .55)
      &:nth-child(2n+1)
        clear both

  // iPad and other tablets.
  @media (min-width: 768px) and (max-width: 1023px)
    li
      col(1/3, cycle:3, gutter: .55)
      &:nth-child(3n+1)
        clear both

  @media (min-width: 1024px)
    li
      col(1/4, cycle:4, gutter: .55)
      &:nth-child(4n+1)
        clear both

